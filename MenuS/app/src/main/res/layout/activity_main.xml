<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cochina"
    tools:context="mx.edu.utng.dsoria.menus.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escoge uno..."
        android:textSize="30dp"
        android:background="#b9ecbfa3"
        android:textColor="#f319191a"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/menus"
        android:id="@+id/cmb_menus"
        android:background="#b9ecbfa3"
        android:textColor="#f319191a"
        android:textSize="25dp"
        ></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escoge un platillo..."
        android:textSize="30dp"
        android:background="#b9ecbfa3"
        android:textColor="#f319191a"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/menu_disponible"
        android:id="@+id/cmb_menu_disponible"
        ></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_agregar_platillo"
        android:textSize="18dp"
        android:background="#b9ecbfa3"
        android:textColor="#f319191a"
        android:id="@+id/btn_agregar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="#b9ecbfa3"
        android:textColor="#f319191a"
        android:text="@string/texto_mostrar_orden"
        android:id="@+id/btn_mostrar_orden"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="#b9ecbfa3"
            android:textColor="#f319191a"
            android:id="@+id/txt_orden"/>
    </ScrollView>



</LinearLayout>
